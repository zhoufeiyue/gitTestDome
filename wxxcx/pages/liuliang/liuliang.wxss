page{background-color:#edf0f3;}
.clearfix:after{
      content: "";height: 0px;clear: both;overflow: hidden;display: block;
  }
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:1px solid gainsboro;color:#999;font-weight:500;font-size:32rpx;}
.blue{line-height:100rpx;text-align:center;color:blue;flex:1;border-right:1px solid gainsboro;font-weight:500;font-size:32rpx;}
.show{display:block;text-align:center;line-height:200rpx;}
.hidden{display:none;text-align:center;line-height:200px;}
.section{padding: 100rpx;padding-bottom:50rpx;text-align: left;margin-top: -40rpx}
.section input{border: 1rpx solid #999;border-radius: 20rpx;text-indent:20rpx;text-align: center}
.content{padding:0rpx 20rpx 0rpx 20rpx;min-height: 200rpx;margin-top: 0rpx;line-height: 100rpx;}
.showinfo{width:30%;height:100rpx;border:1rpx solid #6990ff;border-radius: 20rpx;float: left;box-sizing: border-box;margin-left: 20rpx;margin-top: 20rpx;color:#6990ff;}
.showinfored{width:30%;height:100rpx;border:1rpx solid red;border-radius: 20rpx;float: left;box-sizing: border-box;margin-left: 20rpx;margin-top: 20rpx;color:red;}
.flowsize{margin-top: -20rpx;font-size: 40rpx;height:30rpx}
.price{margin-top:10rpx;font-size: 25rpx;height:40rpx; }
.liupay{display: none}
.liupayshow{display:block;width: 100%;height:100%;}
.fontstyle{color:#fff;background: #f58e2f;padding: 10rpx;border-radius: 30rpx;font-weight: 500; padding:20rpx;padding-left: 100rpx;padding-right: 100rpx;}
.showplace{margin-top: -110rpx;text-align: center;font-size: 30rpx;color: #999;font-weight: 500}
.titleinfo{padding-top:30rpx;}
.titleinfo view{text-align: left;color:#999; padding-left: 30rpx;padding-right: 30rpx;font-size: 25rpx;line-height: 50rpx;text-align: justify;}
.titleinfo .titlefrist{font-size: 30rpx}
